    <script>
        // Admin credentials (in real app, this would be server-side)
        const ADMIN_CREDENTIALS = {
            username: 'admin',
            password: 'tattoo2024'
        };

        // Data storage (in real app, this would be a database)
        let artists = [
            { id: 1, name: 'Marko Petroviƒá', specialty: 'Realizam, Portret', experience: '10+ godina iskustva', emoji: 'üë®‚Äçüé®' },
            { id: 2, name: 'Ana Jovanoviƒá', specialty: 'Geometrijski, Minimalist', experience: '8+ godina iskustva', emoji: 'üë©‚Äçüé®' },
            { id: 3, name: 'Stefan Nikoliƒá', specialty: 'Traditional, Neo-traditional', experience: '12+ godina iskustva', emoji: 'üé≠' }
        ];

        let galleryItems = [
            { id: 1, emoji: 'üåπ', description: 'Realizam - Ru≈æa', color: 'from-purple-500 to-pink-500' },
            { id: 2, emoji: '‚ö°', description: 'Geometrijski - Munja', color: 'from-blue-500 to-purple-500' },
            { id: 3, emoji: 'ü¶Ö', description: 'Traditional - Orao', color: 'from-green-500 to-blue-500' },
            { id: 4, emoji: 'üê∫', description: 'Portret - Vuk', color: 'from-red-500 to-orange-500' }
        ];

        let bookingRequests = [];
        let isAdminLoggedIn = false;

        // Set minimum date to today
        document.getElementById('date').min = new Date().toISOString().split('T')[0];

        // Smooth scrolling
        function scrollToBooking() {
            document.getElementById('booking').scrollIntoView({ 
                behavior: 'smooth' 
            });
        }

        // Form submission
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get form data
            const formData = {
                id: Date.now(),
                fullName: document.getElementById('fullName').value,
                phone: document.getElementById('phone').value,
                email: document.getElementById('email').value,
                artist: document.getElementById('artist').value,
                date: document.getElementById('date').value,
                time: document.getElementById('time').value,
                description: document.getElementById('description').value,
                size: document.getElementById('size').value,
                status: 'pending',
                timestamp: new Date().toLocaleString('sr-RS')
            };

            // Store booking request
            bookingRequests.push(formData);

            // Show success modal
            document.getElementById('successModal').classList.remove('hidden');
            document.getElementById('successModal').classList.add('flex');
            
            // Reset form
            this.reset();
        });

        // Close modal
        function closeModal() {
            document.getElementById('successModal').classList.add('hidden');
            document.getElementById('successModal').classList.remove('flex');
        }

        // Admin functions
        function showAdminLogin() {
            document.getElementById('adminLoginModal').classList.remove('hidden');
            document.getElementById('adminLoginModal').classList.add('flex');
        }

        function closeAdminLogin() {
            document.getElementById('adminLoginModal').classList.add('hidden');
            document.getElementById('adminLoginModal').classList.remove('flex');
            document.getElementById('adminLoginForm').reset();
        }

        function closeAdminPanel() {
            document.getElementById('adminPanel').classList.add('hidden');
            document.getElementById('adminPanel').classList.remove('flex');
            isAdminLoggedIn = false;
        }

        // Admin login
        document.getElementById('adminLoginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('adminUsername').value;
            const password = document.getElementById('adminPassword').value;
            
            if (username === ADMIN_CREDENTIALS.username && password === ADMIN_CREDENTIALS.password) {
                isAdminLoggedIn = true;
                closeAdminLogin();
                showAdminPanel();
            } else {
                alert('Neispravno korisniƒçko ime ili lozinka!');
            }
        });

        function showAdminPanel() {
            document.getElementById('adminPanel').classList.remove('hidden');
            document.getElementById('adminPanel').classList.add('flex');
            loadAdminData();
        }

        function loadAdminData() {
            loadArtistsList();
            loadGalleryList();
            loadBookingsList();
        }

        function loadArtistsList() {
            const artistsList = document.getElementById('artistsList');
            artistsList.innerHTML = '';
            
            artists.forEach(artist => {
                const artistDiv = document.createElement('div');
                artistDiv.className = 'bg-gray-100 p-4 rounded-lg flex justify-between items-center';
                artistDiv.innerHTML = `
                    <div>
                        <h6 class="font-bold text-gray-800">${artist.name}</h6>
                        <p class="text-sm text-gray-600">${artist.specialty}</p>
                        <p class="text-xs text-gray-500">${artist.experience}</p>
                    </div>
                    <button onclick="deleteArtist(${artist.id})" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm">
                        Obri≈°i
                    </button>
                `;
                artistsList.appendChild(artistDiv);
            });
        }

        function loadGalleryList() {
            const galleryList = document.getElementById('galleryList');
            galleryList.innerHTML = '';
            
            galleryItems.forEach(item => {
                const itemDiv = document.createElement('div');
                itemDiv.className = 'bg-gray-100 p-4 rounded-lg flex justify-between items-center';
                itemDiv.innerHTML = `
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-gradient-to-br ${item.color} rounded flex items-center justify-center">
                            ${item.emoji}
                        </div>
                        <span class="text-gray-800">${item.description}</span>
                    </div>
                    <button onclick="deleteGalleryItem(${item.id})" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm">
                        Obri≈°i
                    </button>
                `;
                galleryList.appendChild(itemDiv);
            });
        }

        function loadBookingsList() {
            const bookingsList = document.getElementById('bookingsList');
            bookingsList.innerHTML = '';
            
            if (bookingRequests.length === 0) {
                bookingsList.innerHTML = '<p class="text-gray-500 text-center">Nema novih zahteva za termine.</p>';
                return;
            }
            
            bookingRequests.forEach(booking => {
                const bookingDiv = document.createElement('div');
                bookingDiv.className = 'bg-gray-100 p-4 rounded-lg';
                bookingDiv.innerHTML = `
                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <h6 class="font-bold text-gray-800">${booking.fullName}</h6>
                            <p class="text-sm text-gray-600">üìû ${booking.phone}</p>
                            <p class="text-sm text-gray-600">‚úâÔ∏è ${booking.email}</p>
                            <p class="text-sm text-gray-600">üìÖ ${booking.date} u ${booking.time}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600"><strong>Umetnik:</strong> ${getArtistName(booking.artist)}</p>
                            <p class="text-sm text-gray-600"><strong>Veliƒçina:</strong> ${getSizeName(booking.size)}</p>
                            <p class="text-sm text-gray-600"><strong>Opis:</strong> ${booking.description}</p>
                            <p class="text-xs text-gray-500">Poslato: ${booking.timestamp}</p>
                        </div>
                    </div>
                    <div class="mt-4 flex space-x-2">
                        <button onclick="updateBookingStatus(${booking.id}, 'confirmed')" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm">
                            Potvrdi
                        </button>
                        <button onclick="updateBookingStatus(${booking.id}, 'rejected')" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm">
                            Odbaci
                        </button>
                        <button onclick="deleteBooking(${booking.id})" class="bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm">
                            Obri≈°i
                        </button>
                    </div>
                `;
                bookingsList.appendChild(bookingDiv);
            });
        }

        function getArtistName(artistValue) {
            const artistNames = {
                'marko': 'Marko Petroviƒá',
                'ana': 'Ana Jovanoviƒá',
                'stefan': 'Stefan Nikoliƒá'
            };
            return artistNames[artistValue] || artistValue;
        }

        function getSizeName(sizeValue) {
            const sizeNames = {
                'small': 'Mala (do 5cm)',
                'medium': 'Srednja (5-15cm)',
                'large': 'Velika (15-30cm)',
                'xlarge': 'Vrlo velika (30cm+)'
            };
            return sizeNames[sizeValue] || sizeValue;
        }

        // Add artist functions
        function showAddArtistForm() {
            document.getElementById('addArtistModal').classList.remove('hidden');
            document.getElementById('addArtistModal').classList.add('flex');
        }

        function closeAddArtistForm() {
            document.getElementById('addArtistModal').classList.add('hidden');
            document.getElementById('addArtistModal').classList.remove('flex');
            document.getElementById('addArtistForm').reset();
        }

        document.getElementById('addArtistForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const newArtist = {
                id: Date.now(),
                name: document.getElementById('artistName').value,
                specialty: document.getElementById('artistSpecialty').value,
                experience: document.getElementById('artistExperience').value,
                emoji: 'üë§'
            };
            
            artists.push(newArtist);
            updateArtistsDisplay();
            updateArtistSelect();
            loadArtistsList();
            closeAddArtistForm();
        });

        // Add gallery functions
        function showAddGalleryForm() {
            document.getElementById('addGalleryModal').classList.remove('hidden');
            document.getElementById('addGalleryModal').classList.add('flex');
        }

        function closeAddGalleryForm() {
            document.getElementById('addGalleryModal').classList.add('hidden');
            document.getElementById('addGalleryModal').classList.remove('flex');
            document.getElementById('addGalleryForm').reset();
        }

        document.getElementById('addGalleryForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const newGalleryItem = {
                id: Date.now(),
                emoji: document.getElementById('galleryEmoji').value,
                description: document.getElementById('galleryDescription').value,
                color: document.getElementById('galleryColor').value
            };
            
            galleryItems.push(newGalleryItem);
            updateGalleryDisplay();
            loadGalleryList();
            closeAddGalleryForm();
        });

        // Delete functions
        function deleteArtist(id) {
            if (confirm('Da li ste sigurni da ≈æelite da obri≈°ete ovog umetnika?')) {
                artists = artists.filter(artist => artist.id !== id);
                updateArtistsDisplay();
                updateArtistSelect();
                loadArtistsList();
            }
        }

        function deleteGalleryItem(id) {
            if (confirm('Da li ste sigurni da ≈æelite da obri≈°ete ovaj rad?')) {
                galleryItems = galleryItems.filter(item => item.id !== id);
                updateGalleryDisplay();
                loadGalleryList();
            }
        }

        function deleteBooking(id) {
            if (confirm('Da li ste sigurni da ≈æelite da obri≈°ete ovaj zahtev?')) {
                bookingRequests = bookingRequests.filter(booking => booking.id !== id);
                loadBookingsList();
            }
        }

        function updateBookingStatus(id, status) {
            const booking = bookingRequests.find(b => b.id === id);
            if (booking) {
                booking.status = status;
                loadBookingsList();
                alert(`Zahtev je ${status === 'confirmed' ? 'potvrƒëen' : 'odbaƒçen'}.`);
            }
        }

        // Update display functions
        function updateArtistsDisplay() {
            const artistsSection = document.getElementById('artists').querySelector('.grid');
            artistsSection.innerHTML = '';
            
            artists.forEach(artist => {
                const artistDiv = document.createElement('div');
                artistDiv.className = 'artist-card bg-gray-700 rounded-lg p-6 text-center';
                artistDiv.innerHTML = `
                    <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full mx-auto mb-4 flex items-center justify-center text-2xl">
                        ${artist.emoji}
                    </div>
                    <h4 class="text-xl font-bold mb-2">${artist.name}</h4>
                    <p class="text-gray-300 mb-4">Specijalizacija: ${artist.specialty}</p>
                    <p class="text-sm text-gray-400">${artist.experience}</p>
                `;
                artistsSection.appendChild(artistDiv);
            });
        }

        function updateArtistSelect() {
            const artistSelect = document.getElementById('artist');
            artistSelect.innerHTML = '<option value="">Izaberite umetnika</option>';
            
            artists.forEach(artist => {
                const option = document.createElement('option');
                option.value = artist.name.toLowerCase().replace(' ', '');
                option.textContent = artist.name;
                artistSelect.appendChild(option);
            });
        }

        function updateGalleryDisplay() {
            const gallerySection = document.getElementById('gallery').querySelector('.grid');
            gallerySection.innerHTML = '';
            
            galleryItems.forEach(item => {
                const itemDiv = document.createElement('div');
                itemDiv.className = 'bg-gray-700 rounded-lg p-6 text-center';
                itemDiv.innerHTML = `
                    <div class="w-full h-40 bg-gradient-to-br ${item.color} rounded-lg mb-4 flex items-center justify-center text-4xl">
                        ${item.emoji}
                    </div>
                    <p class="text-sm text-gray-300">${item.description}</p>
                `;
                gallerySection.appendChild(itemDiv);
            });
        }

        // Smooth scroll for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add fade-in animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('fade-in');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.artist-card, .booking-card').forEach(el => {
            observer.observe(el);
        });
    </script>
